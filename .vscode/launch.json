    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) current file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/../Tests/bin/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "run makefile",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
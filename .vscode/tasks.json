{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "run makefile",
            "command": "make debug",
            "options": {
                "cwd": "${workspaceFolder}/Chapter_9"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cpp build active file",
            "command": "/usr/bin/cpp",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}